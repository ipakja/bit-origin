# BIT Virtual Infrastructure - Konfiguration
# Kopiere nach vars.env und passe an

# Host
HOSTNAME=bit-host
ADMIN_USER=stefan

# Storage (vDisks auf dem Laptop)
ZFS_IMG_DIR=/var/lib/libvirt/images
ZFS_DISKS=4
ZFS_DISK_SIZE_GB=20
ZFS_POOL=tank
ZFS_DATASETS="homes groups backup app"
ZFS_ARC_MAX_GB=4

# Libvirt Netzwerk
NET_NAME=bitlan
NET_BRIDGE=virbr50
NET_CIDR=192.168.50.0
NET_PREFIX=24
NET_GATEWAY=192.168.50.1
NET_DHCP_START=192.168.50.100
NET_DHCP_END=192.168.50.199

# VMs
VM_IMAGE=vm-templates/debian-12-generic.qcow2
VM_RAM_ID=2048
VM_CPU_ID=2
VM_RAM_FS=4096
VM_CPU_FS=2
VM_RAM_MON=2048
VM_CPU_MON=1

# VM IPs
ID_CORE_IP=192.168.50.10
FS_CORE_IP=192.168.50.11
MON_CORE_IP=192.168.50.12
DOMAIN=bit.local
REALM=BIT.LOCAL

# Samba AD
AD_ADMIN_PASS='ChangeMe-Admin-Secret123!'
AD_DNS_FORWARDER=1.1.1.1

# Host â†’ NFS-Export zu fs-core
EXPORT_PATH=/tank/groups
EXPORT_PATH2=/tank/homes

# Monitoring
NETDATA_PORT=19999

# Flags
ENABLE_NETDATA=true







